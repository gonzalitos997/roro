<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BatchProcess3.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BatchProcess3.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="BatchProcess3 - Control Themes"
        Width="700" Height="550"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="30">
        
        <!-- Header with Theme Toggle -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Classes="Title"
                               Text="Avalonia Control Themes"/>
                    <TextBlock Classes="Caption"
                               Text="Chapter 7 - AngelSix Real World"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Classes="SecondaryButton"
                        Content="{Binding CurrentThemeText}"
                        Command="{Binding ToggleThemeCommand}"
                        VerticalAlignment="Center"
                        MinWidth="150"/>
            </Grid>
        </Border>

        <!-- Welcome Message -->
        <TextBlock Grid.Row="1" 
                   Classes="Heading"
                   Text="{Binding WelcomeMessage}"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- Center Content -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="30"
                        HorizontalAlignment="Center">
                
                <!-- Counter Display -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="8"
                        Padding="30,20">
                    <StackPanel Spacing="10">
                        <TextBlock Classes="Caption"
                                   Text="CURRENT COUNT"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Classes="Counter"
                                   Text="{Binding Counter}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" 
                            Spacing="15"
                            HorizontalAlignment="Center">
                    
                    <Button Classes="BaseButton"
                            Content="âž• Increment"
                            Command="{Binding IncrementCommand}"
                            Width="140"
                            Height="45"/>

                    <Button Classes="DangerButton"
                            Content="ðŸ”„ Reset"
                            Command="{Binding ResetCommand}"
                            Width="140"
                            Height="45"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="3"
                    Margin="0,20,0,0"
                    Spacing="5">
            <TextBlock Classes="Caption"
                       Text="âœ¨ Custom Control Themes with Dynamic Theme Switching"
                       HorizontalAlignment="Center"/>
            <TextBlock Classes="Caption"
                       Text="Built with Avalonia UI &amp; MVVM Pattern"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
    </Grid>

</Window>
