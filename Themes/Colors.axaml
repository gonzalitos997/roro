<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="LightPrimaryColor">#0078D4</Color>
    <Color x:Key="LightSecondaryColor">#106EBE</Color>
    <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
    <Color x:Key="LightSurfaceColor">#F3F2F1</Color>
    <Color x:Key="LightTextColor">#323130</Color>
    <Color x:Key="LightTextSecondaryColor">#605E5C</Color>
    <Color x:Key="LightBorderColor">#D1D1D1</Color>
    <Color x:Key="LightHoverColor">#E5E5E5</Color>

    <!-- Dark Theme Colors -->
    <Color x:Key="DarkPrimaryColor">#60A5FA</Color>
    <Color x:Key="DarkSecondaryColor">#3B82F6</Color>
    <Color x:Key="DarkBackgroundColor">#1E1E1E</Color>
    <Color x:Key="DarkSurfaceColor">#252526</Color>
    <Color x:Key="DarkTextColor">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondaryColor">#CCCCCC</Color>
    <Color x:Key="DarkBorderColor">#3E3E42</Color>
    <Color x:Key="DarkHoverColor">#2A2D2E</Color>

    <!-- Active Theme Colors (Default: Light) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource LightPrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource LightSecondaryColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource LightSurfaceColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource LightTextColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource LightTextSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource LightBorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{DynamicResource LightHoverColor}"/>

</ResourceDictionary>
